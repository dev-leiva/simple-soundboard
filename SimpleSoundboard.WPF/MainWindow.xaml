<Window x:Class="SimpleSoundboard.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:SimpleSoundboard.WPF.Controls"
        mc:Ignorable="d"
        Title="Simple Soundboard" Height="700" Width="900"
        WindowStartupLocation="CenterScreen">
    
    <Grid x:Name="RootGrid" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Simple Soundboard" FontSize="32" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Low-latency audio mixing with global hotkeys" 
                       FontSize="14" Foreground="Gray"/>
        </StackPanel>

        <!-- Audio Configuration -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="Input Device (Microphone)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding InputDevices}"
                          SelectedItem="{Binding SelectedInputDevice}"
                          DisplayMemberPath="FriendlyName"
                          HorizontalAlignment="Stretch"/>
            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,0">
                <TextBlock Text="Output Device (Virtual Audio)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding OutputDevices}"
                          SelectedItem="{Binding SelectedOutputDevice}"
                          DisplayMemberPath="FriendlyName"
                          HorizontalAlignment="Stretch"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                        Orientation="Horizontal" Margin="0,15,0,0">
                <Button Command="{Binding StartStopAudioCommand}"
                        MinWidth="140" Margin="0,0,10,0"
                        Padding="15,8"
                        FontWeight="Bold"
                        FontSize="14">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#28A745"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Content" Value="▶ Start Audio"/>
                            <Setter Property="BorderBrush" Value="#28A745"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsAudioRunning}" Value="True">
                                    <Setter Property="Background" Value="#DC3545"/>
                                    <Setter Property="BorderBrush" Value="#DC3545"/>
                                    <Setter Property="Content" Value="⬛ Stop Audio"/>
                                </DataTrigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="Refresh Devices"
                        Command="{Binding RefreshDevicesCommand}"
                        Margin="0,0,10,0" Padding="10,5"/>
                <Button Content="Save Configuration"
                        Command="{Binding SaveConfigurationCommand}"
                        Margin="0,0,10,0" Padding="10,5"/>
                <Button Content="VB-Cable Setup"
                        Command="{Binding ShowVBCableSetupCommand}"
                        Padding="10,5"/>
            </StackPanel>

            <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,15,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                    <Label Content="Microphone Gain" FontWeight="SemiBold"/>
                    <Slider Value="{Binding MicrophoneGain}"
                            Minimum="0" Maximum="2"
                            TickFrequency="0.1"
                            Width="200"
                            HorizontalAlignment="Left"/>
                </StackPanel>
                
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,10">
                    <Label Content="Buffer Size (Latency)" FontWeight="SemiBold"/>
                    <ComboBox SelectedValue="{Binding SelectedBufferSize}" 
                              SelectedValuePath="Tag"
                              Width="200" HorizontalAlignment="Left">
                        <ComboBoxItem Content="3ms (144 samples)" Tag="144"/>
                        <ComboBoxItem Content="5ms (240 samples)" Tag="240" IsSelected="True"/>
                        <ComboBoxItem Content="10ms (480 samples)" Tag="480"/>
                        <ComboBoxItem Content="20ms (960 samples)" Tag="960"/>
                    </ComboBox>
                </StackPanel>
                
                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="VB-Cable Status: " FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding VBCableStatus}" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,10">
                    <TextBlock Text="Current Latency: " FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBlock VerticalAlignment="Center" Margin="5,0,10,0">
                        <Run Text="{Binding CurrentLatency, StringFormat='{}{0:F2}'}" />
                        <Run Text="ms"/>
                    </TextBlock>
                    <CheckBox Content="Enable Monitoring" 
                              IsChecked="{Binding MonitoringEnabled}"
                              VerticalAlignment="Center"
                              ToolTip="Play sounds on your main speakers/headphones in addition to VB-Cable"/>
                </StackPanel>
                
                <ProgressBar Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                             Value="{Binding AudioLevel}"
                             Maximum="1.0"
                             Height="10"/>
            </Grid>
        </Grid>

        <!-- Sound Items List -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Sound Items" 
                           FontSize="20" FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsAudioRunning}" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <Button Content="Add Sound" 
                        Command="{Binding AddSoundCommand}"
                        Padding="10,5"/>
            </StackPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding SoundItems}">
                    <ItemsControl.Style>
                        <Style TargetType="ItemsControl">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsAudioRunning}" Value="False">
                                    <Setter Property="Opacity" Value="0.4"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ItemsControl.Style>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#F5F5F5"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="15"
                                    Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <Label Content="Name" FontWeight="SemiBold"/>
                                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                                 Width="250" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                                        
                                        <Label Content="File Path" FontWeight="SemiBold"/>
                                        <TextBox Text="{Binding FilePath, UpdateSourceTrigger=PropertyChanged}"
                                                 MinWidth="400" Margin="0,0,0,10" IsReadOnly="True"/>
                                        
                                        <Label Content="Hotkey" FontWeight="SemiBold"/>
                                        <controls:HotkeyTextBox Hotkey="{Binding Hotkey, Mode=TwoWay}"
                                                                MinWidth="200" Margin="0,0,0,10"/>
                                        
                                        <StackPanel Orientation="Horizontal">
                                            <StackPanel Margin="0,0,20,0">
                                                <Label Content="Volume" FontWeight="SemiBold"/>
                                                <Slider Value="{Binding Volume}"
                                                        Minimum="0" Maximum="1"
                                                        TickFrequency="0.1"
                                                        Width="150"
                                                        VerticalAlignment="Center"/>
                                            </StackPanel>
                                            
                                            <CheckBox Content="Enabled" 
                                                      IsChecked="{Binding IsEnabled}"
                                                      VerticalAlignment="Center"
                                                      Margin="0,20,20,0"/>
                                            
                                            <TextBlock VerticalAlignment="Center" 
                                                       Margin="0,20,0,0"
                                                       Foreground="Gray">
                                                <Run Text="Plays: "/>
                                                <Run Text="{Binding PlayCount, Mode=OneWay}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>

                                    <Button Grid.Column="1" 
                                            Content="Remove"
                                            Command="{Binding DataContext.RemoveSoundCommand, ElementName=RootGrid}"
                                            CommandParameter="{Binding}"
                                            VerticalAlignment="Top"
                                            Padding="10,5"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="#E8E8E8"
                Padding="10"
                Margin="0,20,0,0"
                CornerRadius="4">
            <TextBlock Text="{Binding StatusMessage}"
                       FontSize="12"/>
        </Border>
    </Grid>
</Window>
