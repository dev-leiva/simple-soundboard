<Window x:Class="SimpleSoundboard.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:SimpleSoundboard.WPF.Controls"
        mc:Ignorable="d"
        Title="Simple Soundboard" Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        PreviewMouseDown="Window_PreviewMouseDown"
        Background="{DynamicResource WindowBackgroundBrush}"
        BorderBrush="{DynamicResource BorderBrush}"
        BorderThickness="1">

	<Window.Resources>
		<Style TargetType="{x:Type Window}">
			<Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
			<Setter Property="BorderThickness" Value="1"/>
		</Style>
	</Window.Resources>

	<Grid x:Name="RootGrid" Margin="20" Background="{DynamicResource WindowBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Simple Soundboard" FontSize="32" FontWeight="Bold" Margin="0,0,0,10" Foreground="{DynamicResource TextPrimaryBrush}"/>
                <TextBlock Text="Low-latency audio mixing with global hotkeys" 
                           FontSize="14" 
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Left"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                <Button Command="{Binding ToggleThemeCommand}"
                        Width="40" Height="40"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="24"
                        Margin="0,0,10,0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Content" Value="â˜¼"/>
                            <Setter Property="ToolTip" Value="Switch to Dark Mode"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDarkMode}" Value="True">
                                    <Setter Property="Content" Value="ðŸŒ™"/>
                                    <Setter Property="ToolTip" Value="Switch to Light Mode"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Image Source="Assets/final.png" 
                       Width="64" Height="64" 
                       ToolTip="SimpleSoundboard"/>
            </StackPanel>
        </Grid>

        <!-- Audio Configuration -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="Input Device (Microphone)" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="{DynamicResource TextPrimaryBrush}"/>
                <ComboBox ItemsSource="{Binding InputDevices}"
                          SelectedItem="{Binding SelectedInputDevice}"
                          DisplayMemberPath="FriendlyName"
                          HorizontalAlignment="Stretch"/>
            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,0">
                <TextBlock Text="Output Device (Virtual Audio)" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="{DynamicResource TextPrimaryBrush}"/>
                <ComboBox ItemsSource="{Binding OutputDevices}"
                          SelectedItem="{Binding SelectedOutputDevice}"
                          DisplayMemberPath="FriendlyName"
                          HorizontalAlignment="Stretch"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                        Orientation="Horizontal" Margin="0,15,0,0">
                <Button Command="{Binding StartStopAudioCommand}"
                        MinWidth="140" Margin="0,0,10,0"
                        Padding="15,8"
                        FontWeight="Bold"
                        FontSize="14">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#28A745"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Content" Value="â–¶ Start Audio"/>
                            <Setter Property="BorderBrush" Value="#28A745"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsAudioRunning}" Value="True">
                                    <Setter Property="Background" Value="#DC3545"/>
                                    <Setter Property="BorderBrush" Value="#DC3545"/>
                                    <Setter Property="Content" Value="â¬› Stop Audio"/>
                                </DataTrigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="Refresh Devices"
                        Command="{Binding RefreshDevicesCommand}"
                        Margin="0,0,10,0" Padding="10,5"/>
                <Button Content="Save Configuration"
                        Command="{Binding SaveConfigurationCommand}"
                        Margin="0,0,10,0" Padding="10,5"/>
                <Button Content="VB-Cable Setup"
                        Command="{Binding ShowVBCableSetupCommand}"
                        Padding="10,5"/>
            </StackPanel>

            <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,15,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                    <Label Content="Microphone Gain" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <StackPanel Orientation="Horizontal">
                        <Slider Value="{Binding MicrophoneGain}"
                                Minimum="0" Maximum="2"
                                TickFrequency="0.1"
                                Width="180"
                                VerticalAlignment="Center"/>
                        <TextBlock VerticalAlignment="Center" 
                                   Margin="10,0,0,0" 
                                   Width="50"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Text="{Binding MicrophoneGain, StringFormat='{}{0:P0}'}"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,10">
                    <Label Content="Buffer Size (Latency)" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <ComboBox SelectedValue="{Binding SelectedBufferSize}" 
                              SelectedValuePath="Tag"
                              Width="200" HorizontalAlignment="Left">
                        <ComboBoxItem Content="3ms (144 samples)" Tag="144"/>
                        <ComboBoxItem Content="5ms (240 samples)" Tag="240" IsSelected="True"/>
                        <ComboBoxItem Content="10ms (480 samples)" Tag="480"/>
                        <ComboBoxItem Content="20ms (960 samples)" Tag="960"/>
                    </ComboBox>
                </StackPanel>
                
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,10">
                    <Label Content="Global Sound Volume" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <StackPanel Orientation="Horizontal">
                        <Slider Value="{Binding GlobalSoundVolume}"
                                Minimum="0" Maximum="2"
                                TickFrequency="0.1"
                                Width="180"
                                VerticalAlignment="Center"/>
                        <TextBlock VerticalAlignment="Center" 
                                   Margin="10,0,0,0" 
                                   Width="50"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Text="{Binding GlobalSoundVolume, StringFormat='{}{0:P0}'}"/>
                    </StackPanel>
                </StackPanel>
                
                <Grid Grid.Row="1" Grid.Column="1" Margin="10,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,15,0">
                        <TextBlock Text="VB-Cable: " FontWeight="SemiBold" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Text="{Binding VBCableStatus}" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Latency: " FontWeight="SemiBold" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock VerticalAlignment="Center" Margin="5,0,10,0" Foreground="{DynamicResource TextSecondaryBrush}">
                            <Run Text="{Binding CurrentLatency, StringFormat='{}{0:F2}'}" />
                            <Run Text="ms"/>
                        </TextBlock>
						<CheckBox Content="Enable Monitoring"
								 IsChecked="{Binding MonitoringEnabled}"
								 VerticalAlignment="Center"
								 ToolTip="Play sounds on your main speakers/headphones in addition to VB-Cable"
								 Foreground="{DynamicResource TextPrimaryBrush}"/>
					</StackPanel>
                </Grid>
                
                <ProgressBar Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                             Value="{Binding AudioLevel}"
                             Maximum="1.0"
                             Height="10"/>
            </Grid>
        </Grid>

        <!-- Sound Items List -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Sound Items" 
                           FontSize="20" FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="0,0,15,0"
                           Foreground="{DynamicResource TextPrimaryBrush}">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsAudioRunning}" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <Button Content="Import Sounds" 
                        Command="{Binding AddSoundCommand}"
                        Padding="10,5"
                        Margin="0,0,10,0"
                        ToolTip="Select one or more sound files to import"/>
                <Button Content="Stop All Sounds" 
                        Command="{Binding StopAllSoundsCommand}"
                        Padding="10,5"
                        Background="#FFA500"
                        Foreground="White"
                        ToolTip="Stop any playing audio (microphone continues)"/>
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsAudioRunning}" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                
                <!-- Table Header -->
                <Border Grid.Row="0" Background="{DynamicResource TableHeaderBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Grid.Column="1" Text="ðŸ“Œ" FontWeight="Bold" ToolTip="Pin" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Grid.Column="2" Text="Name" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Grid.Column="3" Text="Duration" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Grid.Column="4" Text="Hotkey" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Grid.Column="5" Text="Volume" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Grid.Column="6" Text="Plays" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Grid.Column="7" Text="" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                    </Grid>
                </Border>
                
                <!-- Table Body -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding SoundItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{DynamicResource TableBorderBrush}" BorderThickness="0,0,1,1" Padding="5" Background="{DynamicResource TableRowBrush}"
                                        AllowDrop="True"
                                        PreviewMouseLeftButtonDown="SoundItem_PreviewMouseLeftButtonDown"
                                        PreviewMouseMove="SoundItem_PreviewMouseMove"
                                        Drop="SoundItem_Drop"
                                        DragEnter="SoundItem_DragEnter">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="180"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Play Button -->
                                        <Button Grid.Column="0" 
                                                Command="{Binding DataContext.PlaySoundCommand, ElementName=RootGrid}"
                                                CommandParameter="{Binding}"
                                                Width="30" Height="25"
                                                Padding="0"
                                                ToolTip="Play sound">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Content" Value="â–¶"/>
                                                    <Setter Property="Background" Value="#28A745"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        
                                        <!-- Pin/Unpin Button -->
                                        <Button Grid.Column="1" 
                                                Command="{Binding DataContext.TogglePinCommand, ElementName=RootGrid}"
                                                CommandParameter="{Binding}"
                                                Width="30" Height="25"
                                                Padding="0"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                FontSize="16">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Content" Value="ðŸ“Œ"/>
                                                    <Setter Property="Opacity" Value="0.3"/>
                                                    <Setter Property="ToolTip" Value="Pin to top"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsPinned}" Value="True">
                                                            <Setter Property="Opacity" Value="1.0"/>
                                                            <Setter Property="ToolTip" Value="Unpin"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        
                                        <!-- Name (Editable) -->
                                        <TextBox Grid.Column="2" 
                                                 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                                 VerticalAlignment="Center"
                                                 BorderThickness="0"
                                                 Background="Transparent"
                                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                                 Margin="5,0"/>
                                        
                                        <!-- Duration -->
                                        <TextBlock Grid.Column="3" 
                                                   Text="{Binding DurationSeconds, StringFormat='{}{0:F1}s'}"
                                                   VerticalAlignment="Center"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Margin="5,0"/>
                                        
                                        <!-- Hotkey with Clear Button -->
                                        <Grid Grid.Column="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <controls:HotkeyTextBox Grid.Column="0"
                                                                    Hotkey="{Binding Hotkey, Mode=TwoWay}"
                                                                    VerticalAlignment="Center"
                                                                    Height="25"
                                                                    Margin="5,0,2,0"/>
                                            <Button Grid.Column="1"
                                                    Content="âœ•"
                                                    Command="{Binding DataContext.ClearHotkeyCommand, ElementName=RootGrid}"
                                                    CommandParameter="{Binding}"
                                                    Width="24" Height="25"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Foreground="{DynamicResource TextSecondaryBrush}"
                                                    ToolTip="Clear hotkey"
                                                    Cursor="Hand"
                                                    Margin="2,0,5,0"
                                                    Padding="0"/>
                                        </Grid>
                                        
                                        <!-- Volume (clickable with popup) -->
                                        <Grid Grid.Column="5">
                                            <Button x:Name="VolumeButton"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    ToolTip="Click to adjust volume"
                                                    HorizontalAlignment="Center"
                                                    Padding="5"
                                                    Click="VolumeButton_Click">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                                                        <TextBlock Text="{Binding Volume, StringFormat='{}{0:P0}'}"
                                                                                   HorizontalAlignment="Center" 
                                                                                   VerticalAlignment="Center"
                                                                                   Cursor="Hand"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            <Popup x:Name="VolumePopup"
                                                   PlacementTarget="{Binding ElementName=VolumeButton}"
                                                   Placement="Bottom"
                                                   StaysOpen="True"
                                                   AllowsTransparency="True">
                                                <Border Background="{DynamicResource TableRowBrush}"
                                                        BorderBrush="{DynamicResource BorderBrush}"
                                                        BorderThickness="2"
                                                        Padding="10"
                                                        CornerRadius="4">
                                                    <Border.Effect>
                                                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.5" Color="Black"/>
                                                    </Border.Effect>
                                                    <StackPanel Width="200">
                                                        <Grid Margin="0,0,0,10">
                                                            <TextBlock Text="Adjust Volume" 
                                                                       FontWeight="SemiBold" 
                                                                       HorizontalAlignment="Left"
                                                                       VerticalAlignment="Center"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                            <Button x:Name="ClosePopupButton"
                                                                    Content="âœ•"
                                                                    HorizontalAlignment="Right"
                                                                    VerticalAlignment="Center"
                                                                    Background="Transparent"
                                                                    BorderThickness="0"
                                                                    Foreground="{DynamicResource TextSecondaryBrush}"
                                                                    FontSize="16"
                                                                    FontWeight="Bold"
                                                                    Width="24"
                                                                    Height="24"
                                                                    Cursor="Hand"
                                                                    PreviewMouseDown="CloseVolumePopup_MouseDown"
                                                                    ToolTip="Close"/>
                                                        </Grid>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Slider x:Name="VolumeSlider"
                                                                    Value="{Binding Volume, Mode=TwoWay}"
                                                                    Minimum="0" 
                                                                    Maximum="1"
                                                                    TickFrequency="0.05"
                                                                    Width="140"
                                                                    VerticalAlignment="Center"/>
                                                            <TextBlock Text="{Binding Volume, StringFormat='{}{0:P0}'}"
                                                                       VerticalAlignment="Center"
                                                                       Margin="10,0,0,0"
                                                                       Width="40"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Border>
                                            </Popup>
                                        </Grid>
                                        
                                        <!-- Play Count -->
                                        <TextBlock Grid.Column="6" 
                                                   Text="{Binding PlayCount}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Margin="5,0"/>
                                        
                                        <!-- Remove Button -->
                                        <Button Grid.Column="7"
                                                Content="âœ•"
                                                Command="{Binding DataContext.RemoveSoundCommand, ElementName=RootGrid}"
                                                CommandParameter="{Binding}"
                                                Width="30" Height="25"
                                                Background="#DC3545"
                                                Foreground="White"
                                                BorderThickness="0"
                                                ToolTip="Remove sound"
                                                Padding="0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="{DynamicResource StatusBarBrush}"
                Padding="10"
                Margin="0,20,0,0"
                CornerRadius="4">
            <TextBlock Text="{Binding StatusMessage}"
                       FontSize="12"
                       Foreground="{DynamicResource TextPrimaryBrush}"/>
        </Border>
    </Grid>
</Window>
