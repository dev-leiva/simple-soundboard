<Window x:Class="SimpleSoundboard.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:SimpleSoundboard.WPF.Controls"
        mc:Ignorable="d"
        Title="Simple Soundboard" Height="700" Width="900"
        WindowStartupLocation="CenterScreen">
    
    <Grid x:Name="RootGrid" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Simple Soundboard" FontSize="32" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="Low-latency audio mixing with global hotkeys" 
                           FontSize="14" 
                           Foreground="Gray"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Left"/>
            </StackPanel>
            <Image Source="Assets/final.png" 
                   Width="64" Height="64" 
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Top"
                   ToolTip="SimpleSoundboard"/>
        </Grid>

        <!-- Audio Configuration -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="Input Device (Microphone)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding InputDevices}"
                          SelectedItem="{Binding SelectedInputDevice}"
                          DisplayMemberPath="FriendlyName"
                          HorizontalAlignment="Stretch"/>
            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,0">
                <TextBlock Text="Output Device (Virtual Audio)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding OutputDevices}"
                          SelectedItem="{Binding SelectedOutputDevice}"
                          DisplayMemberPath="FriendlyName"
                          HorizontalAlignment="Stretch"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                        Orientation="Horizontal" Margin="0,15,0,0">
                <Button Command="{Binding StartStopAudioCommand}"
                        MinWidth="140" Margin="0,0,10,0"
                        Padding="15,8"
                        FontWeight="Bold"
                        FontSize="14">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#28A745"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Content" Value="▶ Start Audio"/>
                            <Setter Property="BorderBrush" Value="#28A745"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsAudioRunning}" Value="True">
                                    <Setter Property="Background" Value="#DC3545"/>
                                    <Setter Property="BorderBrush" Value="#DC3545"/>
                                    <Setter Property="Content" Value="⬛ Stop Audio"/>
                                </DataTrigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="Refresh Devices"
                        Command="{Binding RefreshDevicesCommand}"
                        Margin="0,0,10,0" Padding="10,5"/>
                <Button Content="Save Configuration"
                        Command="{Binding SaveConfigurationCommand}"
                        Margin="0,0,10,0" Padding="10,5"/>
                <Button Content="VB-Cable Setup"
                        Command="{Binding ShowVBCableSetupCommand}"
                        Padding="10,5"/>
            </StackPanel>

            <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,15,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                    <Label Content="Microphone Gain" FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal">
                        <Slider Value="{Binding MicrophoneGain}"
                                Minimum="0" Maximum="2"
                                TickFrequency="0.1"
                                Width="180"
                                VerticalAlignment="Center"/>
                        <TextBlock VerticalAlignment="Center" 
                                   Margin="10,0,0,0" 
                                   Width="50"
                                   Text="{Binding MicrophoneGain, StringFormat='{}{0:P0}'}"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,10">
                    <Label Content="Buffer Size (Latency)" FontWeight="SemiBold"/>
                    <ComboBox SelectedValue="{Binding SelectedBufferSize}" 
                              SelectedValuePath="Tag"
                              Width="200" HorizontalAlignment="Left">
                        <ComboBoxItem Content="3ms (144 samples)" Tag="144"/>
                        <ComboBoxItem Content="5ms (240 samples)" Tag="240" IsSelected="True"/>
                        <ComboBoxItem Content="10ms (480 samples)" Tag="480"/>
                        <ComboBoxItem Content="20ms (960 samples)" Tag="960"/>
                    </ComboBox>
                </StackPanel>
                
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,10">
                    <Label Content="Global Sound Volume" FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal">
                        <Slider Value="{Binding GlobalSoundVolume}"
                                Minimum="0" Maximum="2"
                                TickFrequency="0.1"
                                Width="180"
                                VerticalAlignment="Center"/>
                        <TextBlock VerticalAlignment="Center" 
                                   Margin="10,0,0,0" 
                                   Width="50"
                                   Text="{Binding GlobalSoundVolume, StringFormat='{}{0:P0}'}"/>
                    </StackPanel>
                </StackPanel>
                
                <Grid Grid.Row="1" Grid.Column="1" Margin="10,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,15,0">
                        <TextBlock Text="VB-Cable: " FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding VBCableStatus}" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Latency: " FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBlock VerticalAlignment="Center" Margin="5,0,10,0">
                            <Run Text="{Binding CurrentLatency, StringFormat='{}{0:F2}'}" />
                            <Run Text="ms"/>
                        </TextBlock>
                        <CheckBox Content="Enable Monitoring" 
                                  IsChecked="{Binding MonitoringEnabled}"
                                  VerticalAlignment="Center"
                                  ToolTip="Play sounds on your main speakers/headphones in addition to VB-Cable"/>
                    </StackPanel>
                </Grid>
                
                <ProgressBar Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                             Value="{Binding AudioLevel}"
                             Maximum="1.0"
                             Height="10"/>
            </Grid>
        </Grid>

        <!-- Sound Items List -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Sound Items" 
                           FontSize="20" FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="0,0,15,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsAudioRunning}" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <Button Content="Add Sound" 
                        Command="{Binding AddSoundCommand}"
                        Padding="10,5"
                        Margin="0,0,10,0"/>
                <Button Content="Stop All Sounds" 
                        Command="{Binding StopAllSoundsCommand}"
                        Padding="10,5"
                        Background="#FFA500"
                        Foreground="White"
                        ToolTip="Stop any playing audio (microphone continues)"/>
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsAudioRunning}" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                
                <!-- Table Header -->
                <Border Grid.Row="0" Background="#E0E0E0" BorderBrush="#CCCCCC" BorderThickness="1" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="" FontWeight="Bold"/>
                        <TextBlock Grid.Column="1" Text="Name" FontWeight="Bold"/>
                        <TextBlock Grid.Column="2" Text="Duration" FontWeight="Bold"/>
                        <TextBlock Grid.Column="3" Text="Hotkey" FontWeight="Bold"/>
                        <TextBlock Grid.Column="4" Text="Volume" FontWeight="Bold"/>
                        <TextBlock Grid.Column="5" Text="Plays" FontWeight="Bold"/>
                        <TextBlock Grid.Column="6" Text="" FontWeight="Bold"/>
                    </Grid>
                </Border>
                
                <!-- Table Body -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding SoundItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#DDDDDD" BorderThickness="0,0,1,1" Padding="5" Background="White">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Play/Pause Button -->
                                        <Button Grid.Column="0" 
                                                Command="{Binding DataContext.PlaySoundCommand, ElementName=RootGrid}"
                                                CommandParameter="{Binding}"
                                                Width="30" Height="25"
                                                Padding="0"
                                                ToolTip="Play sound">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Content" Value="▶"/>
                                                    <Setter Property="Background" Value="#28A745"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        
                                        <!-- Name (Editable) -->
                                        <TextBox Grid.Column="1" 
                                                 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                                 VerticalAlignment="Center"
                                                 BorderThickness="0"
                                                 Background="Transparent"
                                                 Margin="5,0"/>
                                        
                                        <!-- Duration -->
                                        <TextBlock Grid.Column="2" 
                                                   Text="{Binding DurationSeconds, StringFormat='{}{0:F1}s'}"
                                                   VerticalAlignment="Center"
                                                   Margin="5,0"/>
                                        
                                        <!-- Hotkey -->
                                        <controls:HotkeyTextBox Grid.Column="3" 
                                                                Hotkey="{Binding Hotkey, Mode=TwoWay}"
                                                                VerticalAlignment="Center"
                                                                Height="25"
                                                                Margin="5,0"/>
                                        
                                        <!-- Volume (clickable with popup) -->
                                        <Grid Grid.Column="4">
                                            <Button x:Name="VolumeButton"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    ToolTip="Click to adjust volume"
                                                    HorizontalAlignment="Center"
                                                    Padding="5"
                                                    Click="VolumeButton_Click">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                                                        <TextBlock Text="{Binding Volume, StringFormat='{}{0:P0}'}"
                                                                                   HorizontalAlignment="Center" 
                                                                                   VerticalAlignment="Center"
                                                                                   Cursor="Hand"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            <Popup PlacementTarget="{Binding ElementName=VolumeButton}"
                                                   Placement="Bottom"
                                                   StaysOpen="False"
                                                   AllowsTransparency="True">
                                                <Border Background="White"
                                                        BorderBrush="#CCCCCC"
                                                        BorderThickness="1"
                                                        Padding="10"
                                                        CornerRadius="4">
                                                    <Border.Effect>
                                                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                                                    </Border.Effect>
                                                    <StackPanel Width="200">
                                                        <TextBlock Text="Adjust Volume" 
                                                                   FontWeight="SemiBold" 
                                                                   Margin="0,0,0,10"/>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Slider Value="{Binding Volume, Mode=TwoWay}"
                                                                    Minimum="0" 
                                                                    Maximum="1"
                                                                    TickFrequency="0.05"
                                                                    Width="140"
                                                                    VerticalAlignment="Center"/>
                                                            <TextBlock Text="{Binding Volume, StringFormat='{}{0:P0}'}"
                                                                       VerticalAlignment="Center"
                                                                       Margin="10,0,0,0"
                                                                       Width="40"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Border>
                                            </Popup>
                                        </Grid>
                                        
                                        <!-- Play Count -->
                                        <TextBlock Grid.Column="5" 
                                                   Text="{Binding PlayCount}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Foreground="Gray"
                                                   Margin="5,0"/>
                                        
                                        <!-- Remove Button -->
                                        <Button Grid.Column="6" 
                                                Content="✕"
                                                Command="{Binding DataContext.RemoveSoundCommand, ElementName=RootGrid}"
                                                CommandParameter="{Binding}"
                                                Width="30" Height="25"
                                                Background="#DC3545"
                                                Foreground="White"
                                                BorderThickness="0"
                                                ToolTip="Remove sound"
                                                Padding="0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="#E8E8E8"
                Padding="10"
                Margin="0,20,0,0"
                CornerRadius="4">
            <TextBlock Text="{Binding StatusMessage}"
                       FontSize="12"/>
        </Border>
    </Grid>
</Window>
